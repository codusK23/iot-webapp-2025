@using Westwind.AspNetCore.Markdown
@model MyPortfolioWebApp.Models.Board

@{
    ViewData["Title"] = "Delete";
}

<section id="board" class="section">
    <div class="container section-title" data-aos="fade-up">
        <h2>Board</h2>
        <p>Lorem ipsum dalat sit amet.</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div>
            <h4>Board</h4>
            <h4>Are you sure you want to delete this?</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Writer)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Writer)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Contents)
                </dt>
                    <dd class="col-sm-10">
                    @Markdown.ParseHtmlString(Model.Contents)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.PostDate)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.PostDate)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ReadCount)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ReadCount)
                </dd>
            </dl>
            <form asp-controller="Board" asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                @Html.AntiForgeryToken()
                <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
                <a asp-action="Index" class="btn btn-sm btn-success">List</a>
            </form>
        </div>
    </div>
</section>